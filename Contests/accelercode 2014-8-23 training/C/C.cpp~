#include<iostream>
#include<algorithm>
#include<cstdio>
#include<vector>
#include<cstring>
#include<map>
#include<queue>
#include<stack>
#include<string>
#include<cstdlib>
#include<ctime>
#include<set>
using namespace std;

int main(void)
{
	int T;
	scanf("%d",&T);
	while(T--)
	{
		int n,m;
		scanf("%d%d",&n,&m);
		int sum=0;
		int tmp;
		while(n--)
		{
			scanf("%d",&tmp);
			sum+=tmp;
		}
		int ok=sum%m;
		int avg=sum/m;
		if(ok) avg++;
		cout<<avg<<endl;
	}
	return 0;
}
